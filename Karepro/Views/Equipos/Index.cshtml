@model IEnumerable<Karepro.Models.Equipo>

@{
    ViewBag.Title = "Equipos";
}

<h2>Equipos</h2>



@if (User.IsInRole("Administrador"))
{
    <p>
        @Html.ActionLink("Registrar equipo", "Create")
    </p>
}
<table class="table table-hover">
    <tr class="top">
        <th>
            Asignado a
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>

            Periodo Mantenimiento
        </th>
        <th>
            Institucion
        </th>
        @if (User.IsInRole("Administrador"))
        {
            <th>Accion</th>
        }


    
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Perio_mantenimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Institucion.Nombre)
        </td>
        <td>
            @if (User.IsInRole("Administrador"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.IdEquipo })
            }
             

        </td>
    </tr>
}

</table>
