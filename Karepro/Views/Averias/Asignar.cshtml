@model Karepro.Models.AsignarAveriaViewModel

@{
    ViewBag.Title = "Asignar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Asignar</h2>

<dl class="dl-horizontal">
    <dt>
        Equipo
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Averia.Equipo.Nombre)
    </dd>

    <dt>
        Institucion
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Averia.Institucion.Nombre)
    </dd>


    <dt>
        @Html.DisplayNameFor(model => model.Averia.Nivel_urgencia.Nivel)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Averia.Nivel_urgencia.Nivel)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Averia.Descripcion)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Averia.Descripcion)
    </dd>
</dl>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-group">
    <h2>Asignar a</h2>
    @Html.LabelFor(model => model.idTecnico, "IdTecnico", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("idTecnico", null, htmlAttributes: new { @class = "form-control" })
    </div>

     <div class="col-md-10">
        <input value=@Model.Averia.IdAveria type="hidden" name="idAveria"/>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Asignar" class="btn btn-success" />
        </div>
    </div>
</div>
}





